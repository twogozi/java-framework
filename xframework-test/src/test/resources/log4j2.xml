<?xml version="1.0" encoding="UTF-8"?>
<!-- status=debug 可以查看log4j的装配过程 -->
<configuration status="OFF" monitorInterval="1800">
    <properties>
        <property name="LOG_PATH">/Users/wengjiayu</property>
        <property name="project_name">xframework</property>
        <property name="pattern">[%level] [%date{ISO8601}] [%logger] [%thread] [] [%X{requestId}] [%X{serverIp}]%msg%n</property>
    </properties>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${pattern}"/>
        </Console>

        <RollingRandomAccessFile name="LogstashFile" fileName="${LOG_PATH}/logs/${project_name}/logstash/logstash.log" filePattern="${LOG_PATH}/logs/${project_name}/logstash/%d{yyyy-MM-dd}_logstash.log">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="RollingInfoFile" fileName="${LOG_PATH}/logs/${project_name}/info.log" filePattern="${LOG_PATH}/logs/${project_name}/info_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="info" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingRandomAccessFile>

        <RollingRandomAccessFile name="RollingErrorFile" fileName="${LOG_PATH}/logs/${project_name}/error.log" filePattern="${LOG_PATH}/logs/${project_name}/error_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${pattern}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingRandomAccessFile>

    </appenders>
    <loggers>
        <!-- 3rdparty Loggers -->
        <Logger name="org.springframework" level="debug"/>
        <Logger name="com.google" level="error"/>
        <Logger name="net.rubyeye" level="error"/>
        <Logger name="org.hibernate" level="error"/>
        <Logger name="com.alibaba.dubbo" level="error"/>
        <Logger name="org.mybatis" level="debug"/>
        <Logger name="org.apache" level="error"/>
        <Logger name="io.undertow" level="info"/>
        <Logger name="springfox.documentation" level="debug"/>
        <Root level="debug">
            <appender-ref ref="Console"/>
            <appender-ref ref="LogstashFile"/>
            <appender-ref ref="RollingErrorFile"/>
            <appender-ref ref="RollingInfoFile"/>
        </Root>
    </loggers>

</configuration>